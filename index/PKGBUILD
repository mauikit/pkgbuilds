pkgname=index-git
pkgver=r317.5081063
pkgrel=1
pkgdesc='Maui File Manager'
arch=(x86_64 i686 arm armv6h armv7h aarch64)
license=(GPL3)
depends=(ki18n knotifications qt5-quickcontrols2 qt5-svg qt5-webengine kio mauikit-git kirigami2 attica kconfig kservice)
makedepends=(git cmake extra-cmake-modules gettext)
optdepends=(gst-plugins-bad gst-plugins-ugly)
provides=(index)
conflicts=(index)
source=("${pkgname}::git+https://invent.kde.org/kde/index-fm")
sha256sums=('SKIP')

pkgver() {
  cd "$pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$pkgname"
  cmake \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}
 
package() {
  cd "$pkgname"
  make INSTALL_ROOT="$pkgdir" install
}
